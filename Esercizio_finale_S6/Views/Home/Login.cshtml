@model Esercizio_finale_S6.Models.Utente

@{
    ViewBag.Title = "Login";
}

<div class="container body-content">
    @using (Html.BeginForm())
    {
        <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
                <div class="col-md-5 col-lg-6" style="border-right: 10px solid #ecb800 ">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <div class="d-flex align-items-center mb-3 pb-1">
                            <div class="d-flex flex-column">
                                <span class="h1 fw-bold mb-0">No-tell Motel</span>
                                <span class="h3 text-danger fw-bold mb-0">Login</span>
                            </div>
                        </div>
                        <h5 class="fw-normal mb-3" style="letter-spacing: 1px;">Entra con il tuo account</h5>
                        <div id="inputlogin" class="form-outline mb-4">
                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-lg", placeholder = "Username" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @style = "color: red" })
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color: red" })
                        </div>
                        @if (ViewBag.AuthError != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.AuthError
                            </div>
                        }
                        <div class="pt-1 mt-5 d-flex align-items-center">
                            <input type="submit" value="Login" class="btn btn-danger" />
                        </div>
                        <br />
                    </div>
                </div>
                <div class="col-md-7 col-lg-6 d-flex align-items-center justify-content-center">
                    <img src="~/Content/imgs/logo.jpg" alt="login form" class="img-fluid w-50" />
                </div>
            </div>
        </div>
    }
</div>